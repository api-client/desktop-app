{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "noImplicitOverride": true,
    "outDir": "./dist/src",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "incremental": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declarationMap": false,
    "pretty": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    }
  },
  "include": ["src/**/*", "src/types.ts"]
}
